{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>RÃ©servations</th>
                    <th>Note</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for ad in ads %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td>{{ ad.title }}</td>
                    <td>{{ ad.author.fullName }}</td>
                    <td>{{ ad.bookings | length }}</td>
                    <td>{{ ad.avgRatings | number_format(1, ',' , ' ')}}</td>
                    <td>
                        <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary"></a>
                        <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger"></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
