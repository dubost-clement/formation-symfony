{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-3">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-users fa-3x"></i>
                            </div>

                            <div class="col">
                                <h4 class="card-title">{{ stats.users }} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-lg-3">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>

                            <div class="col">
                                <h4 class="card-title">{{ stats.ads }} annonces</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-lg-3">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>

                            <div class="col">
                                <h4 class="card-title">{{ stats.bookings }} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-lg-3">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>

                            <div class="col">
                                <h4 class="card-title">{{ stats.comments }} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">Les annonces populaires</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in best %}
                            <tr>
                                <td>{{ ad.title }}</td>
                                <td><img src="{{ad.picture}}" alt="" class="avatar avatar-mini"> {{ad.firstName}} {{ad.lastName}}</td>
                                <td>{{ ad.rating | number_format(1, ",", " ") }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">Les annonces impopulaires</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worst %}
                            <tr>
                                <td>{{ ad.title }}</td>
                                <td><img src="{{ad.picture}}" alt="" class="avatar avatar-mini"> {{ad.firstName}} {{ad.lastName}}</td>
                                <td>{{ ad.rating | number_format(1, ",", " ") }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
