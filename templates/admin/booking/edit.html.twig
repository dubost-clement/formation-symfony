{% extends 'admin/base.html.twig' %}

{% block title %}Gestion de la réservation : {{ booking.ad.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Gestion de la réservation : {{ booking.ad.title }}</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    {{ form_row(form.startDate) }}
                    {{ form_row(form.endDate) }}
                    {{ form_row(form.comment) }}
                </div>
                <div class="col">
                    {{ form_row(form.booker) }}
                    {{ form_row(form.ad) }}
                </div>
            </div>

            <button type="submit" class="btn btn-success">Modifier</button>
        {{ form_end(form) }}
    </div>

{% endblock %}