{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion des commentaires</h1>
        <div class="responsive-table-line">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for comment in comments %}
                <tr>
                    <td data-label="Id">{{ comment.id }}</td>
                    <td data-label="Date">{{ comment.createdAt | date('d/m/Y') }}</td>
                    <td data-label="Auteur">{{ comment.author.fullName }}</td>
                    <td data-label="Commentaire">{{ comment.content }}</td>
                    <td data-label="Note">{{ comment.rating | number_format(1, ',' , ' ')}}</td>
                    <td data-label="Annonce">{{ comment.ad.title }}</td>
                    <td data-label="Action">
                        <a href="#" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}
